
<div class="container-fluid">

    <div class="d-flex justify-content-center">
        <div class="pt-2  w-50">
            <div class="card card-body btn ">
                <h3>ตรวจสอบจำนวนสินค้า</h3>
            </div>
        </div>
    </div>



    <div class="row">
        <div class="col-12">
            <div class="card card-body">
                
                <table id="employee" class="table table-bordered table-hover " >
                    <thead>
                        <tr>
                            <th>รหัส</th>
                            <th>ชื่อ</th>
                            <th>ราคา</th>
                            <th>จำนวน</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(let i of db_item){%>
                            <tr>
                                <td><%= i.id%></td>
                                <td><%= i.name%></td>
                                <td><%= i.price%></td>
                                <td><%= i.amount%></td>
                            </tr>
                        <%} %> 
                        
                    </tbody>
                </table>
            </div>
        </div>
    </div>


</div>






<script>
    $(function () {
      $('#employee').DataTable({
        "paging": true,
        "lengthMenu": [[5, 10, 20], [5, 10, 20]],
        "searching": true,
        "ordering": true,
        "info": true,
        "autoWidth": false,
        "responsive": true,
      });
    });
  
</script>
